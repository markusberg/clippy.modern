{
  "name": "clippy.modern",
  "version": "1.0.0",
  "description": "Same old Clippy. Modern JavaScript.",
  "exports": {
    ".": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "npm run build:tsc && npm run build:agents && npm run build:css && npm run build:rollup",
    "build:tsc": "tsc -p .",
    "build:agents": "node build/agents/build-json.js",
    "build:css": "cp src/clippy.css dist",
    "build:rollup": "rollup --config",
    "clean": "rimraf build dist *.tsbuildinfo",
    "watch": "npm run clean && nodemon --watch src -e ts,css --exec 'npm run build'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markusberg/clippy.modern.git"
  },
  "keywords": [
    "clippy.modern",
    "clippy.js",
    "clippy"
  ],
  "author": "Fireplace, Inc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/markusberg/clippy.modern/issues"
  },
  "homepage": "https://github.com/markusberg/clippy.modern#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^20.11.20",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
